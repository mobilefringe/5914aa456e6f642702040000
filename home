<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
        //Dropdown Hours
	    $("#menu_hours_container").hide();
    	$('.dropdown_btn').click(function(e){
    	    $("#menu_hours_container").toggle();
    	    console.log("toggle");
    	});
    })
    
    function renderAll(){
        var banners = getBanners();
        var feature_items = getFeatureList();
        var today_hours = getTodaysHours();
        var hours = getPropertyHours();
        var stores = getStoresList();
        renderVendorScroll('#store_list_container','#store_list_template', stores, "stores");
        renderBanner('#banner_template','#home_banner',banners);
        renderFeatureItems('#feature_container', '#feature_template', feature_items);
        renderHomeHours('#homem_hours_container', '#homem_hours_template', today_hours);
        renderHomeDropdownHours('#menu_hours_container', '#menu_hours_template', hours, 'reg_hours');
        show_content();
        $('.flexslider').flexslider({
                animation: "slide",
        });
        $('.flex-next').html("");
    }
    
    
    //Dropdown Hours
	$("#menu_hours_container").hide();
	$('.dropdown_btn').click(function(e){
        $("#menu_hours_container").toggle();
        console.log("toggle");
	});
</script>