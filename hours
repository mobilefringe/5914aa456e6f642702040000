<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
    })
    
    function renderAll(){
        var hours = getPropertyHours();
        renderHours('#hours_page_container','#hour_page_template',hours);
        show_content();
        $('.flexslider').flexslider({
                animation: "slide",
        });
    }
</script>