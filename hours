<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
    })
    
    function renderAll(){
        var hours = getPropertyRegularHours();
        renderHours('#hours_page_container','#hours_page_template', hours,'reg_hours');
        
        var holiday_hours = getPropertyHolidayHours().sortBy(function(o){ return o.holiday_date });
        // if(hours.length > 7){
            renderHours('#h_hours_page_container','#h_hours_page_template',hours,'holiday_hours');
        // } else {
            $("#disp_holiday_hour").hide();
        // }
        
        show_content();
    }
</script>