<!DOCTYPE html>
<html lang="en">
<head>
        <meta property="og:title" content="{{meta_title}}">
        <meta property="og:description" content="{{meta_description}}">
        <meta property="og:image" content="{{meta_image}}">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{{meta_description}}">
        <meta name="keywords" content="{{meta_keywords}}">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no,initial-scale=1">
        <title>{{meta_title}}</title>
        
        <!-- Bootstrap Core CSS - Uses Bootswatch Flatly Theme: //bootswatch.com/flatly/ -->
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
        
        <!-- Custom Fonts -->
        
        
        <!-- Custom CSS -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.5.0/flexslider.css" rel="stylesheet">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link href="../application.css" rel="stylesheet">
        
        <!-- js-->
        <!-- jQuery Version 1.11.0 -->
        <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.5.0/jquery.flexslider.js"></script>
        <script src="//codecloud.cdn.speedyrails.net/sites/5639075d6e6f647b9f020000/text/javascript/1446569669000/instafeed.min.js"></script>
        <script src='https://www.google.com/recaptcha/api.js'></script>
        <script src="//codecloud.cdn.speedyrails.net/sites/579231876e6f6467cf000000/application/x-javascript/1468507772000/moment.min.js"></script>
        <script src="//codecloud.cdn.speedyrails.net/sites/579231876e6f6467cf000000/application/x-javascript/1468507661000/moment-timezone-with-data.min.js"></script>
        
        <!--MallMaverick SDK-->
        <script src="//mallmaverick.codecloudapp.com/mallmaverick_v3.js"></script>
        <script src="//mallmaverick.codecloudapp.com/mustache_mallmaverick.js?v=0.3"></script>
        
        <script src="../application.js" type="text/javascript"></script>
        <script src="../helpers.js" type="text/javascript"></script>
        
        <script>
            setEndPoint('//soc.mallmaverick.com/api/v3/soc/all.json');
        </script>
        

</head>

<body>
    <header>
        <!--Header -->
        <div class="header">
            <!-- iphone header -->
            <div class="mobile_header visible-phone top_nav row-fluid" >        
                <li class="dropdown custom_dropdown">
                    <button type="button" data-toggle="dropdown" class="pull-right menu_btn" style="background-color:none;padding:10px 0 0; border:none">
                        <img alt="dropdown menu" src="/system/site_images/photos/000/000/028/original/btn_menu_red.png?1365032457" />
                    </button>
                    <ul class="dropdown-menu bottom pull-right" style="width:100%;left:0%;margin-top:55px">                
                        <div class="arrow" style="left:93%"></div>
                        {% for menu_item in site.menu_items_array %}
                        	<div class="mobile_menu_header" style="margin-left:5px;margin-right:5px;">
                        		<a href='{{ menu_item["url"] }}' >{{menu_item["title_code"])}} </a>
              				</div>
            					{% for sub_menu_item in menu_item["sub_menu_items"] %}
            					    <div class="mobile_menu_item" style="margin-left:5px;margin-right:5px;">
                        			<a href='{{sub_menu_item["url"] }}'>{{sub_menu_item["title_code"])}}</a>
              						</div>
            					{% endfor %}
            		 	{% endfor %}
                    </ul>
                </li>
                <a id="mobile_logo" href="/">
                    <img alt="Logo" src="{{site.logo_image_path}}" />
                </a>
            </div>
            <!-- iphone header END -->
            
            <!-- Home page header -->
            <div class="top_nav hidden-phone custom_dropdown full_header" id="home_header">
                <div class="container-fluid trim_screen">              
                    <div class="row-fluid" id="site_nav">      
                        <a id="centre_logo" href="/">
                            <img alt="Site Logo" src="{{site.logo_image_path}}"/>
                        </a>
                        <div class="social_hours hidden-phone">
                            <!-- hours --> 
                            <span style="position:relative">
                                <button class="btn" data-toggle="dropdown">
                                <img alt="Menu" class="pull-left" src="/system/site_images/photos/000/000/016/original/icon_hours.png?1364850146" />
                                Today 
                                {% if today_hour.is_closed %}
                                    Closed 
                                {% else %}                            
                                    Open until {{today_hour.close_time |  in_my_time_zone: "8" | date: "%l:%M %p"}}
                                {% endif %}
                                <span class="caret pull-right"></span>    
                                </button>
                                <ul class="dropdown-menu bottom hour_dropdown" style="top:30px;">                  
                                {% for regular_hour in site.property.hours limit:7 %}
                                    <li>
                                        {% if regular_hour.day_of_week == today_hour.day_of_week %}
                                        <div class="drop-down-row-today" style="margin-left:5px;margin-right:5px;">
                                        {% else %}
                                        <div class="drop-down-row" style="margin-left:5px;margin-right:5px;">
                                        {% endif %}
                                        <table width="100%" role='presentation'>
                                        <tr>
                                            <td align="left" style="font-weight:bold">{{ regular_hour | get_day_of_week }}</td>
                                            <td align="right">{{regular_hour.open_time |  in_my_time_zone: "8" | date: "%l:%M %p"}} - {{regular_hour.close_time |  in_my_time_zone: "8" | date: "%l:%M %p"}}</td>
                                        </tr>
                                        </table>
                                		</div>
                                	</li>
                                {% endfor %} 
                                </ul>
                            </span>
                            <!-- hours END --> 
                        </div>
                        <ul class="nav_menu">
                        {% for menu_item in site.menu_items_array %}                 
                            {% assign title =  menu_item["title_code"] %}
                            {% if menu_item["sub_menu_items"] and menu_item["sub_menu_items"].size > 0 %}
                                <li class="dropdown span2">
                                    <a class="btn-nav" data-toggle="dropdown">{{ title }}</a>                         
                                    {% if forloop.index == 3 %}                            
                                    <ul class="dropdown-menu bottom" style="left:-50%">
                                    {% else %}
                                    <ul class="dropdown-menu bottom" style="left:-60%">
                                    {% endif %}
                                    <div class="arrow" style=""></div>
                                    {% for sub_menu_item in menu_item["sub_menu_items"] %}
                                        <li><a href='{{sub_menu_item["url"] }}' target='{{sub_menu_item["target"] }}'><span>{{sub_menu_item["title_code"]}}</span></a></li>
                                    {% endfor %}
                                    </ul>
                                </li>  
                            {% else %}
                                <li class="dropdown span2">                        
                                    <a href="{{menu_item['url']}}" class="btn-nav">{{ title }}</a>
                                </li>
                            {% endif %}
                        {% endfor %} 
                        </ul>
                    </div>  
        		</div>  
        	</div>
        </div>    
        
        <div class="container-fluid trim_screen" style="padding-top:25px;">    
            {{page_content}}
        </div>
        <div class="line_break">&nbsp;</div>
        <!--Bottom Nav Dynamic-->
        <div class="bottom_nav hidden-phone">
        	<div class="container-fluid trim_screen">
        		<div class="row-fluid" align="left">
        			{% for menu_item in site.menu_items_array %}			            
                        <div class="span3">
                            <table role='presentation'>
                                <tr>
        							<td align="left" class="bottom_nav_header">
                                    {% if menu_item["sub_menu_items"] and menu_item["sub_menu_items"].size > 0 %}
        								{{ menu_item["title_code"] }}
                                    {% else %}
                                    <a href="{{menu_item['url']}}">{{menu_item["title_code"]}}</a>                                
                                    {% endif %}
        							</td>
        						</tr>
        						{% for sub_menu_item in menu_item["sub_menu_items"] %}
        							<tr>
        								<td align="left" class="bottom_nav_list">
        									<a href='{{sub_menu_item["url"] }}' target='{{sub_menu_item["target"] }}'>{{sub_menu_item["title_code"]}}</a>
        								</td>
        							</tr>
        						{%endfor%}
        					</table>
        				</div>					
                    {%endfor%}
        		</div>
        	</div>
        </div>    
    </header>
    <section id="content">
        <!--Pages that use this file as a layout will have their content replaced in the 'yield'-->
        {{yield}}
    </section>
    <footer>
        <!--Footer -->
        <div class="footer">
        	<div class="container-fluid trim_screen">
        		<div class="row-fluid">
        		  	<div class="span12">
                      <p class="footer_text">
                      Hopedale Mall,  All rights reserved &copy; 2013 | Powered by <a href="http://www.mobilefringe.com/">Mobile Fringe</a> 
                      </p>              
                    </div>				
        		</div>
        	</div>
        </div>
    </footer>
</body>

</html>