<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
    })
    
    function renderAll(){
        var prop_details = getPropertyDetails();
        renderPropertyDetails('#address_container','#address_template',prop_details);
        var slug = "soc-contact-us";
        prefix = get_prefix();
        var pages_json = prefix + "/pages/" + slug + ".json"
        $.getJSON(pages_json).done(function(data) {
               $('#page_title').html(data.title);
               $('#page_content').html(data.body);
        }).fail(function(jqXHR) {
            if (jqXHR.status == 404) {
               $("#404_msg").fadeIn("fast");
            }
        });
        show_content();
    }
</script>
